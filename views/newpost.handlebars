<header class="center-align valign-wrapper">
  <div class="container ">
    <div class="row">
      <div class="col s12">
        {{!-- Header should be whichever neighborhood was clicked --}}
        <h1>New Post</h1>
         <h2>{{neighborhoods.name}}</h2>

      </div>
    </div>

  </div>

</header>

<main>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <form active="../api/models/post" method="post">
          <input id="title" type="text" name="title" placeholder="title">
          <input id="body" type="text" name="body" placeholder="body">
          <input id="rank" type="text" name="rank" placeholder="rank">

          <div class="input-field">
            <select id="neighborhood">
              
              <option value="" disabled selected>Select Your Neighborhood</option>
              {{#each neighborhoods}}
              <option id="hoodID" value="{{this.id}}">{{this.name}} {{this.id}}</option>
              {{/each}}
            </select>
          </div>
          
          <button class="btn submitButton" type="submit" name="button">Submit</button>
        </form>
      </div>
    </div>

  </div>

  {{!-- This button triggers more buttons for adding a post or selecting a new neighborhood --}}
  <div class="fixed-action-btn">
    <a href="#" class="btn-floating btn-large z-depth-5">
      <i class="large material-icons">more_vert</i>
    </a>
    <ul>
      {{!-- This button will trigger a modal for new posts --}}
      <li class="">
        <a href="/newpost" class="btn-floating btn-floating-1 btn-large z-depth-5">
          POST {{!-- Can add icon like below --}} {{!--
          <i class="large material-icons">mood</i> --}}
        </a>
      </li>
      {{!-- This button will trigger a modal for selecting a new neighborhood --}} {{!--
      <li class="modal-7-trigger">
        <a href="#modal-7" class="btn-floating btn-floating-2 btn-large z-depth-5">
          <i class="large material-icons">local_dining</i>
        </a>
      </li> --}}
    </ul>
  </div>

</main>

<footer class="center-align valign-wrapper">
  <div class="container ">
    <div class="row">
      <div class="col s12">
        <a href="#">GitHub</a>
      </div>
    </div>
  </div>
</footer>
