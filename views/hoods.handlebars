<header class="center-align valign-wrapper">
    <div class="container ">
        <div class="row">
            <div class="col s12">
                {{!-- This is funky but works! --}}
                <h1> {{#with posts.[0]}} 
                    {{!-- <img src="../public/images/{{Hood.slug}}.jpg"> --}}
                    {{Hood.name}} 
                    {{/with}}
                </h1>
            </div>
        </div>

    </div>

</header>

<main>
    <div class="row view-buttons center-align" id="map-list-buttons">
        <div class="col s6 view-button view-button-inactive view-map">
            <h4>MAP</h2>
        </div>
        <div class="col s6 view-button view-button-active view-list">
            <h4>LIST</h2>
        </div>
    </div>

    <div class="container">

        <div class="row">

            <div class="col s12 hood-content">
                {{#with posts.[0]}}
                <div id="map" class="hide" data-lat="{{Hood.lat}}" data-lng="{{Hood.lng}}"></div>
                {{/with}}
            </div>

         </div>    
{{!-- POSTS --}}
            <div class="row">
                <div class="col s12 hood-content" id="list">
                    <h1>Posts</h1>
                    {{!-- FORMAT ME!!!--}}
                    <ul>
                        <li> {{#each posts}}
                            <h5>{{this.title}} </h5>
                            <hr> {{this.body}}
                            <hr>
                            <button class="upVote" data-id="{{this.id}}" data-rank="{{this.rank}}">Helpful</button>
                            {{this.rank}}
                            <button class="downVote" data-id="{{this.id}}" data-rank="{{this.rank}}">Not So Much</button>
                            {{/each}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</main>

<footer class="center-align valign-wrapper">
    <div class="container ">
        <div class="row">
            <div class="col s12">
                <a href="#">GitHub</a>
                <a href="/">Home</a>
                <a href="/newpost/">New Post</a>
            </div>
        </div>
    </div>
</footer>

