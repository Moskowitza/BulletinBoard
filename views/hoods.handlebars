<header class="center-align valign-wrapper">
    <div class="container ">
        <div class="row">
            <div class="col s12">
                {{!-- This is funky but works! --}}
                <h1> {{#with posts.[0]}} {{!--
                    <img src="../public/images/{{Hood.slug}}.jpg"> --}} {{Hood.name}} {{/with}}
                </h1>
            </div>
        </div>

    </div>

</header>

<main>
    <div class="row view-buttons center-align" id="map-list-buttons">
        <div class="col s6 view-button view-button-inactive view-map">
            <h4>MAP</h2>
        </div>
        <div class="col s6 view-button view-button-active view-list">
            <h4>LIST</h2>
        </div>
    </div>

    <div class="container">

        <div class="row">

            <div class="col s12 hood-content">
                {{#with posts.[0]}}
                <div id="map" class="hide" data-lat="{{Hood.lat}}" data-lng="{{Hood.lng}}"></div>
                {{/with}}
            </div>
        </div>

            {{!-- POSTS --}}

            <h1 id="postHeading">Community Posts</h1>
            {{!-- NEW CODE --}} {{#each posts}}
            <div class="row">
                <div class="col s12">
                    <div class="card grey lighten-2">
                        <div class="card-content black-text">
                            <span class="card-title">{{this.title}}</span>
                            <p>{{this.body}}</p>
                        </div>
                        <div class="card-action">
                            <button class="upVote" data-id="{{this.id}}" data-rank="{{this.rank}}">Helpful</button>
                            {{this.rank}}
                            <button class="downVote" data-id="{{this.id}}" data-rank="{{this.rank}}">Not So Much</button>
                            <div class="postLocation" data-location="{{this.location}}"></div>

                        </div>
                    </div>
                </div>
            </div>
            {{/each}}


        {{!-- NEW POST MODAL - Could move to a partial for better organization --}}
        <div id="modal1" class="modal">
            <div class="modal-content">
                {{#with posts.[0]}}
                <h2 id="newpost" data-hoodid="{{Hood.id}}" class="center-align">{{Hood.name}} Post</h2>
                {{/with}}
                <form active="../api/models/post" method="post">
                    <input id="title" type="text" name="title" placeholder="title">
                    <input id="body" type="text" name="body" placeholder="body">
                    <input id="location" type="text" name="location" placeholder="location"> {{!--
                    <input id="rank" type="text" name="rank" placeholder="rank"> --}} {{!--
                    <div class="input-field">
                        <select id="neighborhood">

                            <option value="" disabled selected>Select Your Neighborhood</option>
                            {{#each neighborhoods}}
                            <option id="hoodID" value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div> --}}

                    <button class="btn submitButton" type="submit" name="button">Submit</button>
                </form>
            </div>
        </div>
    </div>
    </div>

</main>

<footer class="center-align valign-wrapper">
    <div class="container ">
        <div class="row">
            <div class="col s12">
                <a href="#">GitHub</a>
                <a href="/">Home</a>
                <a data-post="new" href="#">New Post</a>
                {{!--
                <a href="/newpost/">New Post</a> --}}
            </div>
        </div>
    </div>
</footer>

