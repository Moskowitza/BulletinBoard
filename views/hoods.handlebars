<header class="center-align valign-wrapper">
    <div class="container ">
        <div class="row">
            <div class="col s12">
                {{!-- Header should be whichever neighborhood was clicked --}}
                <h1>{{this.neighborhood}}</h1>
            </div>
        </div>

    </div>

</header>

<main>
    <div class="row view-buttons center-align">
        <div class="col s6 view-button-left">
            <h4>MAP</h2>
        </div>
        <div class="col s6 view-button-right">
            <h4>LIST</h2>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col s12">

            </div>
        </div>
        <div class="row">

            <div class="col s12">

                {{!-- List for posts that will populate from database --}}
                <ul>
                    {{#each posts}}
                    <li></li>
                    {{/each}}
                </ul>

            </div>
        </div>
    </div>
</main>

<footer class="center-align valign-wrapper">
    <div class="container ">
        <div class="row">
            <div class="col s12">
                <a href="#">GitHub</a>
            </div>
        </div>
    </div>
</footer>